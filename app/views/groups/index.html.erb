<div class="col-md-12">
  <div class="group">
    <%= link_to('new group',new_group_path,class:"btn btn-default") %>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>标题</td>
        <td>描述</td>
        <td>创建人</td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
      <tr>
        <td>#</td>
        <!-- group_path对应controller中“show”这个action来处理： -->
        <td><%= link_to(group.title,group_path(group)) %></td>
        <td><%= group.description %></td>
        <td><%= group.user.email%></td>
        <td>
          <% if current_user && current_user==group.user%>
          <%# 对应edit这个action—— %>
          <%= link_to("edit",edit_group_path(group),class:"btn btn-default") %>
          <%= link_to("delete",group_path(group),method: :delete,data:{confirm:"are you sure?"},class:"btn btn-default") %>
          <%end%>
        </td>
      </tr>
      <% end %>
    </tbody>




  </table>
</div>
